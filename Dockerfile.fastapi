# Dockerfile for FastAPI Application
# Isolated from Flask app
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | python3 -
ENV PATH="/root/.local/bin:$PATH"

# Copy Poetry configuration (use existing pyproject.toml)
COPY pyproject.toml poetry.lock* ./

# Configure Poetry to not create virtual environment (we're in a container)
RUN poetry config virtualenvs.create false

# Install existing Flask dependencies first (from lock file)
RUN poetry install --no-root --no-interaction --no-ansi

# Install FastAPI-specific dependencies
# Note: Using 'poetry add' to add new dependencies on top of existing ones
# Added openai-agents[sqlalchemy] for stateless PostgreSQL sessions
RUN poetry add fastapi uvicorn[standard] sqlalchemy[asyncio] asyncpg aiosqlite \
    python-jose[cryptography] passlib[bcrypt] python-multipart email-validator slowapi --no-interaction && \
    poetry add "openai-agents[sqlalchemy]" --no-interaction

# Verify asyncpg and agents packages are installed
RUN python -c "import asyncpg; print('✅ asyncpg installed successfully')" || \
    (echo "❌ asyncpg installation failed" && exit 1)

RUN python -c "import agents; print('✅ OpenAI Agents SDK installed successfully')" || \
    (echo "❌ OpenAI Agents SDK installation failed" && exit 1)

# Copy FastAPI application code
COPY fastapi_app/ ./fastapi_app/

# Copy .env for configuration (will be overridden by docker-compose env vars)
COPY .env ./

# Create database directory
RUN mkdir -p /app/data && chmod 777 /app/data

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Expose FastAPI port (different from Flask)
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run FastAPI with uvicorn
CMD ["uvicorn", "fastapi_app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
